# FLASK CONFIGURATION
FLASK_ENV=development
FLASK_APP=app.py
DEBUG=True
PORT=5000
FLASK_HOST=0.0.0.0

# SIMULATION CONFIGURATION
CONFIG_PATH=config.yaml

# SIMULATION SERVER
SIMULATION_HOST=localhost
SIMULATION_PORT=8813

# LOGGING
LOG_LEVEL=INFO

# SUMO SIMULATION SETTINGS
SUMO_USE_GUI=False
SUMO_DELTA_TIME=10
SUMO_MAX_STEPS=36000

# TRAINING PARAMETERS (loaded from config.yaml)
AGENT_EPSILON_START=1.0
AGENT_EPSILON_MIN=0.01
AGENT_EPSILON_DECAY=0.995
AGENT_LEARNING_RATE=0.0005
AGENT_BATCH_SIZE=128
AGENT_BUFFER_SIZE=10000
AGENT_GAMMA=0.95

# PATHS
MODELS_DIR=models/checkpoints
LOGS_DIR=data/logs
BEST_MODEL_PATH=models/bestmodel.pth
NETWORK_FILE=data/networks/intersection.net.xml
ROUTE_FILE=data/networks/intersection.rou.xml

# API SETTINGS
CORS_ORIGINS=*
API_TIMEOUT=30
API_MAX_CONTENT_LENGTH=16777216

# MONITORING
ENABLE_METRICS=True
METRICS_UPDATE_INTERVAL=10